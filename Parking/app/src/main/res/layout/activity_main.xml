<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Toolbar
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:width="100dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:id="@+id/parked_cars_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="100" />
        <TextView
            android:width="100dp"
            android:gravity="center_horizontal"

            android:layout_below="@id/parked_cars_count"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Parked Cars" />

        <TextView
            android:width="100dp"
            android:gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:id="@+id/vacant_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="100" />
        <TextView
            android:width="100dp"
            android:gravity="center_horizontal"
            android:layout_alignParentEnd="true"

            android:layout_below="@id/vacant_count"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Vacant Spaces" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pay"
            android:text="Pay 1.00 USD"
            android:textColor="#000" />
    </RelativeLayout>

    </Toolbar>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</RelativeLayout>